@page
@model TheMilesTours.Areas.Admin.Pages.Tour.IndexModel
@{
}
<div class="page-content-wrapper">
	<div class="page-content">
		<div class="page-bar">
			<div class="page-title-breadcrumb">
				<div class=" pull-left">
					<div class="page-title">Tour List</div>
				</div>
				<ol class="breadcrumb page-breadcrumb pull-right">
					<li>
						<i class="fa fa-home"></i>&nbsp;<a class="parent-item"
						asp-asp-area="CRM" asp-controller="Dashboard" asp-action="index">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
					</li>
					@* 	<li>
						<a class="parent-item" href="">Professors</a>&nbsp;<i class="fa fa-angle-right"></i>
					</li> *@
					<li class="active">Tour List</li>
				</ol>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="tabbable-line">
					<!-- <ul class="nav nav-tabs">
					<li class="active">
					<a href="#tab1" data-bs-toggle="tab"> List View </a>
					</li>
					<li>
					<a href="#tab2" data-bs-toggle="tab"> Grid View </a>
					</li>
					</ul> -->
					<ul class="nav customtab nav-tabs" role="tablist">
						<li class="nav-item">
							<a href="#tab1" class="nav-link active"
							data-bs-toggle="tab">
								List
								View
							</a>
						</li>

					</ul>
					<div class="tab-content">
						<div class="tab-pane active fontawesome-demo" id="tab1">
							<div class="row">
								<div class="col-md-12">
									<div class="card card-box">
										<div class="card-head">
											<header>All Car</header>
											<div class="tools">
												<a class="fa fa-repeat btn-color box-refresh"
												href="javascript:;"></a>
												<a class="t-collapse btn-color fa fa-chevron-down"
												href="javascript:;"></a>
												<a class="t-close btn-color fa fa-times"
												href="javascript:;"></a>
											</div>
										</div>
										<div class="card-body ">
											<div class="row">
												<div class="col-md-6 col-sm-6 col-6">
													<div class="btn-group">
														<a href="/admin/Tour/Add" id="addRow"
														class="btn btn-primary">
															Add New <i class="fa fa-plus"></i>
														</a>
													</div>
												</div>
											</div>
											<table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle"
											id="example4">
												<thead>
													<tr>
														<th></th>
														<th> Title </th>
														<th> Price Per Person </th>
														<th> Location </th>
														<th> Stay Duration </th>
														<th> Discount </th>

														<th> Action </th>
													</tr>
												</thead>
												<tbody>
													@foreach (var tour in Model.Tours)
													{
														<tr class="odd gradeX">
															<td class="patient-img">
																<img src="@tour.CoverImageUrl" alt="">
															</td>
															<td>@tour.Title</td>
															<td>RS-@tour.PricePerPerson</td>
															<td>@tour.Location</td>
															<td>@tour.StayDuration</td>
															@if(tour.HasDiscout == true)
															{
																<td>RS-@tour.DiscountPercentage</td>

															}
															else
															{
																<td>N-A</td>
															}

															<td>
																<a asp-area="CRM" asp-controller="car" asp-action="Edit" asp-route-carId="@tour.Id"
																   class="tblEditBtn">
																	<i class="fa fa-pencil"></i>
																</a>
																 <a class="tblDelBtn">
																	<i class="fa fa-trash-o"></i>
																</a>

																<form id="deleteForm-@tour.Id" asp-area="CRM" asp-action="DeleteCategory" asp-controller="Category" class="mt-1" asp-route-categoryId="@tour.Id" method="post" style=" display: inline-block; ">
																	<button type="button" onclick="confirmDelete('@tour.Id')" class="tblDelBtn"><i class="fa fa-trash-o"></i></button>
																</form>
																<button type="button" onclick="confirmDelete('@tour.Id')" class="tblDelBtn">
																	<i class="fa fa-trash-o"></i>
																</button>
															</td>
														</tr>

													}

												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end page content -->
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />

	

	}
}